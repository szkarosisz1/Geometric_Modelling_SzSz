<Window x:Class="BSplineWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="B-Spline Görbe" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="Canvas" Background="White" />
        <Button Content="Frissítés" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Click="UpdateCurve" />
        <Slider x:Name="DegreeSlider" Minimum="2" Maximum="10" Value="3" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="120,10,0,0"/>
        <TextBlock x:Name="DegreeLabel" Text="Rend: 3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="330,10,0,0"/>
    </Grid>
</Window>
