<Window x:Class="Binomialis_egyutthatok_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binomialis_egyutthatok_WPF"
        mc:Ignorable="d"
        Title="Binomiális Együtthatók és Bernstein Polinomok" Height="450" Width="800">
    <Grid>
        <TextBox Name="nTextBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" />
        <TextBox Name="kTextBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="240,20,0,0" />

        <Button Name="CalculateButton" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0" Content="Számítás" Click="CalculateButton_Click"/>

        <TextBlock Name="factorialResultTextBlock" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,120,0,0" />
        <TextBlock Name="recursiveResultTextBlock" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,150,0,0" />
        <TextBlock Name="bernsteinResultTextBlock" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,180,0,0" />
    </Grid>
</Window>
